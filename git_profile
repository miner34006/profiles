# Colored output
git config --global color.branch auto
git config --global color.diff auto
git config --global color.interactive auto
git config --global color.status auto

# GIT log format
git config --global pretty.my format:%C(yellow)%h %C(reset) %cd %C(reset)|%C(red)%d %C(cyan)%s
git config --global format.pretty my

# GIT user settings
git config --global user.name "Polyanok Bogdan"
git config --global user.email miner34006@gmail.com

# Text editor settings
git config --global core.editor sublime
